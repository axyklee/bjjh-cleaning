# .env.example

# Secret used for authentication (set in production)
AUTH_SECRET=

# Trust host header (true/false)
AUTH_TRUST_HOST=

# Google OAuth credentials
AUTH_GOOGLE_CLIENT_ID=
AUTH_GOOGLE_CLIENT_SECRET=

# Auth URL (e.g., http://localhost:3000 for local, https://yourapp.pages.dev for Cloudflare)
AUTH_URL=

# Database connection URL
# For PostgreSQL: postgresql://user:password@host:port/database
# For D1 (Cloudflare): file:./dev.db (local) or managed by Cloudflare Workers binding (production)
DATABASE_URL=

# MinIO configuration (for local development/non-Cloudflare deployments)
# Currently production uses Cloudflare R2, so MinIO is not included in Docker
MINIO_ENDPOINT=
MINIO_PORT=
MINIO_ACCESS_KEY=
MINIO_SECRET_KEY=
MINIO_BUCKET=
MINIO_USE_SSL=

# Cloudflare R2 configuration (for Cloudflare Workers deployment)
# R2_PUBLIC_URL is the public URL for accessing files (optional, for custom domains)
R2_PUBLIC_URL=

# Node environment: development, test, or production
NODE_ENV=